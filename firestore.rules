rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Admin users collection
    match /adminUsers/{uid} {
      allow read: if request.auth != null;
      allow create: if request.auth != null && request.auth.uid == uid;
      allow update: if request.auth != null && isAdmin();
      allow delete: if request.auth != null && isAdmin();
    }

    // Tasks collection â€” only approved users
    match /tasks/{taskId} {
      allow read: if isApproved();
      allow create: if isApproved();
      allow update: if isApproved() && (
        isAdmin() ||
        resource.data.assigneeId == request.auth.uid ||
        resource.data.createdBy == request.auth.uid
      );
      allow delete: if isApproved() && (
        isAdmin() ||
        resource.data.createdBy == request.auth.uid
      );

      // Comments subcollection
      match /comments/{commentId} {
        allow read: if isApproved();
        allow create: if isApproved();
      }
    }

    // Devices collection (shared with Cloud-Development)
    match /devices/{deviceId} {
      allow read: if isApproved();
      allow create: if isApproved() && isAdmin();
    }

    function isAdmin() {
      return get(/databases/$(database)/documents/adminUsers/$(request.auth.uid)).data.role == 'admin';
    }

    function isApproved() {
      return request.auth != null &&
        get(/databases/$(database)/documents/adminUsers/$(request.auth.uid)).data.status == 'approved';
    }
  }
}
